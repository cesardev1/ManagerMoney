@model AccountType

@{
    ViewData["Title"] = "Borrar tipo de cuenta";
}

<h3 class="mb-3"> Esta seguro que desea borrar el tipo de cuenta @Model.Name</h3>

<form asp-action="DeleteAccountType">
    <input type="hidden" asp-for="Id"/>
    <button class="btn btn-primary" type="submit" >Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>