@model  AccountType
@{
    ViewData["Title"] = "Create Account Type";
}

<h1>Crear Tipo Cuenta</h1>

<h5>El Tipo de cuenta se refiere a como podemos agrupar cuentas,
Ejemplos: Prestamos, tarjeta de credito, etc.</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="AccountTypes" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Nombre</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}